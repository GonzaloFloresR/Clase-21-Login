<header>
    <div id="PreHeader">
        {{> submenu}}
    </div>
    <div id="MainHeader">
        <div id="LogoHeader">Lista del Sol</div>
        <div id="MenuHeader">{{>menu}}</div>
    </div>
</header>

<main>
    <div id="container" >
        <h1>Login de usuarios</h1>
        <h2>Ingresar su Usuario (correo eléctronico) y contraseña</h2>
        <form class="formSession" action="/api/sessions/login" method="post">
        {{#if error}}
            <div class="error">{{error}}</div>
            {{else if message}}
            <div class="succes">{{message}}</div>
        {{/if}}
            <input type="email" name="email" id="email" placeholder="Correo Electrónico" autocomplete="email" />
            <input type="password" name="password" id="password" placeholder="Contraseña" autocomplete="current-password" />
            <input type="submit" value="Ingresar" id="submit">
        </form>
        
    </div>
</main>

<footer>
    <ul>
        <li><a href="/home" >Página de Inicio</a></li>
    </ul>
    
</footer>


<script src="/js/login.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>




